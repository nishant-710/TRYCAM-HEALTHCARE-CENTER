<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <title>Trycam - Admin Panel</title>
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-content {
            flex: 1;
            margin-left: 220px;
            margin-top: 50px;
        }

        .media-container {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid #ffe5d6;
        }

        .add-btn {
            background: #ff6a00;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .add-btn:hover {
            background: #ff8533;
            transform: translateY(-2px);
        }

        .title-section {
            margin-bottom: 40px;
        }

        .title-header {
            background: #fff5f0;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            color: #ff6a00;
            font-size: 18px;
            font-weight: 500;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 25px;
            padding: 10px;
        }

        .media-item {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
            cursor: pointer;
        }

        .media-item:hover {
            transform: translateY(-5px);
        }

        .media-preview {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .action-buttons {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .media-item:hover .action-buttons {
            opacity: 1;
        }

        .page-title {
            color: #121212;
            font-size: 25px;
            text-align: center;
        }

        .action-btn {
            width: 35px;
            height: 35px;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            color: white;
            backdrop-filter: blur(5px);
        }

        .edit-btn {
            background: rgba(255, 106, 0, 0.85);
        }

        .edit-btn:hover {
            background: #ff6a00;
            transform: translateY(-3px);
            box-shadow: 0 3px 8px rgba(255, 106, 0, 0.3);
        }

        .delete-btn {
            background: rgba(255, 51, 51, 0.85);
        }

        .delete-btn:hover {
            background: #ff3333;
            transform: translateY(-3px);
            box-shadow: 0 3px 8px rgba(255, 51, 51, 0.3);
        }

        .preview-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.85);
            z-index: 9999;
            justify-content: center;
            align-items: center;
        }

        .preview-content {
            max-width: 90%;
            max-height: 90vh;
            position: relative;
            z-index: 10000;
        }

        .preview-content img,
        .preview-content video {
            max-width: 100%;
            max-height: 90vh;
            border-radius: 8px;
        }

        .close-preview {
            position: absolute;
            top: -40px;
            right: 0;
            color: white;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        /* Add responsive styles */
        @media (max-width: 992px) {
            .admin-content {
                margin-left: 0;
                padding: 20px;
                margin-top: 60px;
            }

            .media-container {
                padding: 20px;
            }

            .page-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }
        }

        @media (max-width: 768px) {
            .admin-content {
                padding: 15px;
            }

            .media-container {
                padding: 15px;
            }

            .title-header {
                font-size: 16px;
                padding: 12px 15px;
            }

            .media-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
                gap: 15px;
            }

            .action-buttons {
                top: 10px;
                right: 10px;
                opacity: 0;
            }

            .media-item:hover .action-buttons {
                opacity: 1;
            }

            .preview-modal {
                padding: 15px;
            }
        }

        @media (max-width: 480px) {
            .admin-content {
                padding: 10px;
            }

            .media-container {
                padding: 10px;
                border-radius: 8px;
            }

            .page-title {
                font-size: 18px;
            }

            .media-grid {
                grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
                gap: 10px;
            }

            .add-btn {
                width: 100%;
                justify-content: center;
                margin-top: 10px;
            }

            .preview-content {
                max-width: 95%;
                margin: 0 auto;
            }

            .close-preview {
                top: -35px;
                right: 0;
            }
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar') %>
            <%- include('./partials/header') %>

                <main class="admin-content">
                    <div class="media-container">
                        <div class="page-header">
                            <h1 class="page-title">Media Gallery</h1>
                            <a href="/admin/media/add" class="add-btn">
                                <i class="fas fa-plus"></i> Add New Media
                            </a>
                        </div>

                        <% if (media && media.length> 0) { %>
                            <% media.forEach(function(title) { %>
                                <div class="title-section">
                                    <h2 class="title-header">
                                        <%= title.name %>
                                    </h2>
                                    <% if (title.medias && title.medias.length> 0) { %>
                                        <div class="media-grid">
                                            <% title.medias.forEach(function(item) { %>
                                                <div class="media-item"
                                                    onclick="openPreview('<%= item.file %>', '<%= item.fileType %>')">
                                                    <% if (item.fileType==='video' ) { %>
                                                        <video class="media-preview" controls>
                                                            <source src="/uploads/<%= item.file %>" type="video/mp4">
                                                        </video>
                                                        <% } else { %>
                                                            <img src="/uploads/<%= item.file %>" alt="Media"
                                                                class="media-preview">
                                                            <% } %>
                                                                <div class="action-buttons">
                                                                    <button class="action-btn edit-btn"
                                                                        onclick="editMedia(event, '<%= item._id %>')"
                                                                        title="Edit">
                                                                        <i class="fas fa-edit"></i>
                                                                    </button>
                                                                    <button class="action-btn delete-btn"
                                                                        onclick="deleteMedia(event, '<%= item._id %>')"
                                                                        title="Delete">
                                                                        <i class="fas fa-trash"></i>
                                                                    </button>
                                                                </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <p>No media items in this category</p>
                                            </div>
                                            <% } %>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="empty-state">
                                            <i class="fas fa-photo-video fa-3x mb-3"></i>
                                            <p>No media found. Start by adding some media!</p>
                                        </div>
                                        <% } %>
                    </div>
                </main>
    </div>

    <!-- Preview Modal -->
    <div class="preview-modal" id="previewModal">
        <div class="preview-content">
            <button class="close-preview" onclick="closePreview()">
                <i class="fas fa-times"></i>
            </button>
            <div id="previewContainer"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function openPreview(file, type) {
            const modal = document.getElementById('previewModal');
            const container = document.getElementById('previewContainer');

            if (type === 'video') {
                container.innerHTML = `
                    <video controls autoplay>
                        <source src="/uploads/${file}" type="video/mp4">
                    </video>`;
            } else {
                container.innerHTML = `<img src="/uploads/${file}" alt="Preview">`;
            }

            modal.style.display = 'flex';
        }

        function closePreview() {
            const modal = document.getElementById('previewModal');
            modal.style.display = 'none';
            document.getElementById('previewContainer').innerHTML = '';
        }

        function deleteMedia(event, id) {
            event.stopPropagation();

            Swal.fire({
                title: 'Are you sure?',
                text: "This media will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ff6a00',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/media/delete/${id}`, {
                        method: 'POST'
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) { window.location.href = '/admin/media'; }
                            else {
                                throw new Error(data.message);
                            }
                        })
                        .catch((error) => {
                            Swal.fire({
                                icon: "error",
                                title: error.message,
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 1800,
                                // timerProgressBar: true,
                            });
                        });
                }
            });
        }

        function editMedia(event, id) {
            event.stopPropagation();
            window.location.href = `/admin/media/edit/${id}`;
        }

        // Close preview on escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') closePreview();
        });

        // Close preview on clicking outside
        document.getElementById('previewModal').addEventListener('click', function (e) {
            if (e.target === this) closePreview();
        });
    </script>
</body>

</html>