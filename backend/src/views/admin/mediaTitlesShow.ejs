<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <title>Trycam - Admin Panel</title>
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-content {
            flex: 1;
            margin-left: 225px;
            margin-top: 70px;
            padding: 30px;
            transition: margin-left 0.3s ease;
        }

        .page-title {
            color: #121212;
            font-size: 30px;
        }

        .titles-container {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid #ffe5d6;
        }

        .titles-table {
            width: 100%;
            border-collapse: collapse;
        }

        .titles-table th {
            background: #fff5f0;
            padding: 15px;
            text-align: left;
        }

        .titles-table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
        }

        .action-btns {
            display: flex;
            gap: 10px;
        }

        .add-btn,
        .edit-btn,
        .delete-btn {
            padding: 8px 15px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .add-btn {
            background: #ff6a00;
            color: white;
            text-decoration: none;
        }

        .edit-btn {
            background: #4CAF50;
            color: white;
        }

        .delete-btn {
            background: #ff4444;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        /* Add responsive styles */
        @media (max-width: 992px) {
            .admin-content {
                margin-left: 0;
                padding: 20px;
                margin-top: 60px;
            }

            .titles-container {
                padding: 20px;
            }

            .page-title {
                font-size: 24px;
            }
        }

        @media (max-width: 768px) {
            .admin-content {
                padding: 15px;
            }

            .titles-container {
                padding: 15px;
            }

            .page-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .titles-table {
                display: block;
                overflow-x: auto;
                white-space: nowrap;
                -webkit-overflow-scrolling: touch;
            }

            .action-btns {
                flex-wrap: nowrap;
            }

            .add-btn,
            .edit-btn,
            .delete-btn {
                padding: 6px 12px;
                font-size: 13px;
            }
        }

        @media (max-width: 480px) {
            .admin-content {
                padding: 10px;
            }

            .titles-container {
                padding: 12px;
                border-radius: 8px;
            }

            .page-title {
                font-size: 20px;
            }

            .titles-table th,
            .titles-table td {
                padding: 12px 10px;
            }

            .action-btns {
                gap: 6px;
            }

            .add-btn,
            .edit-btn,
            .delete-btn {
                padding: 5px 10px;
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar') %>
            <%- include('./partials/header') %>

                <main class="admin-content">
                    <div class="titles-container">
                        <div class="page-header">
                            <h1 class="page-title">Media Titles</h1>
                            <a href="/admin/media-titles/add" class="add-btn">
                                <i class="fas fa-plus"></i> Add New Title
                            </a>
                        </div>

                        <% if (title && title.length> 0) { %>
                            <table class="titles-table">
                                <thead>
                                    <tr>
                                        <th>Title Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% title.forEach(function(title) { %>
                                        <tr>
                                            <td>
                                                <%= title.name %>
                                            </td>
                                            <td>
                                                <div class="action-btns">
                                                    <button class="edit-btn"
                                                        onclick="window.location.href='/admin/media-titles/edit/<%= title._id %>'">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </button>
                                                    <button class="delete-btn"
                                                        onclick="deleteTitle('<%= title._id %>')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <div class="empty-state">
                                    <i class="fas fa-file-alt fa-3x mb-3"></i>
                                    <p>No media titles found. Add your first title!</p>
                                </div>
                                <% } %>
                    </div>
                </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteTitle(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This title will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ff6a00',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/media-titles/delete/${id}`, {
                        method: 'POST'
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                location.reload();
                            } else {
                                throw new Error(data.message);
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: "error",
                                title: error.message,
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 1800,
                                // timerProgressBar: true,
                            });
                        });
                }
            });
        }
    </script>
</body>

</html>