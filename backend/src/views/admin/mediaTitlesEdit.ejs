<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <title>Trycam - Admin Panel</title>
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-content {
            flex: 1;
            margin-left: 225px;
            margin-top: 70px;
            padding: 30px;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .page-title {
            color: #555;
            font-size: 28px;
            text-align: center;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #ff6a00;
            outline: none;
        }

        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .submit-btn,
        .cancel-btn {
            padding: 12px 25px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn {
            background: #ff6a00;
            color: white;
            flex: 1;
        }

        .cancel-btn {
            background: #f0f0f0;
            color: #666;
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar') %>
            <%- include('./partials/header') %>

                <main class="admin-content">
                    <div class="form-container">
                        <h1 class="page-title">Edit Media Title</h1>

                        <form id="titleForm" onsubmit="handleSubmit(event)">
                            <div class="form-group">
                                <label for="name">Title Name</label>
                                <input type="text" id="name" name="name" value="<%=title.name%>" class="form-control"
                                    required minlength="2">
                            </div>

                            <div class="btn-group">
                                <button type="submit" class="submit-btn">
                                    <i class="fas fa-save"></i> Update Title
                                </button>
                                <button type="button" class="cancel-btn"
                                    onclick="window.location.href='/admin/media-titles'">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function handleSubmit(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/admin/media-titles/edit/<%=title._id%>', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.href = '/admin/media-titles';
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: "error",
                    title: error.message,
                    toast: true,
                    position: "top",
                    showConfirmButton: false,
                    timer: 1800,
                    // timerProgressBar: true,
                });
            }
        }
    </script>
</body>

</html>