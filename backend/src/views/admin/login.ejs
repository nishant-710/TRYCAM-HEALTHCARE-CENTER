<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Trycam - Admin Login</title>
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <style>
        body {
            margin: 0;
            font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
            background: linear-gradient(120deg, #fffaf0, #fff4e6);
            -webkit-font-smoothing: antialiased;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
        }

        .login-card {
            width: 100%;
            max-width: 1100px;
            min-height: 500px;
            display: flex;
            box-shadow: 0 18px 40px rgba(20, 20, 20, 0.08);
            border-radius: 14px;
            overflow: hidden;
            background: #fff;
        }

        .left-panel {
            flex: 1;
            min-width: 320px;
            background: linear-gradient(180deg, rgba(255, 106, 0, 0.12), rgba(255, 150, 0, 0.06));
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 36px 28px;
            gap: 18px;
        }

        .right-panel {
            flex: 1;
            min-width: 360px;
            padding: 34px 36px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 18px;
        }

        .input-field {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid #e6e6e6;
            border-radius: 10px;
            outline: none;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .input-field:focus {
            border-color: #ffbb88;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

        .submit-btn {
            margin-top: 6px;
            background: linear-gradient(90deg, #ff6a00, #ff9500);
            border: none;
            color: #fff;
            padding: 12px 16px;
            border-radius: 10px;
            font-weight: 700;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(255, 106, 0, 0.12);
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 35px rgba(255, 106, 0, 0.18);
        }

        @media (max-width: 992px) {
            .login-card {
                max-width: 700px;
            }

            .left-panel {
                min-width: 280px;
                padding: 30px 20px;
            }

            .right-panel {
                min-width: 320px;
                padding: 30px;
            }
        }

        @media (max-width: 768px) {
            .login-card {
                flex-direction: column;
                min-height: auto;
            }

            .left-panel {
                min-width: 100%;
                padding: 25px 20px;
            }

            .left-panel img {
                height: 60px;
            }

            .right-panel {
                min-width: 100%;
                padding: 25px 20px;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }

            .login-card {
                border-radius: 10px;
            }

            .left-panel {
                padding: 20px 15px;
            }

            .left-panel img {
                height: 50px;
            }

            .right-panel {
                padding: 20px 15px;
            }

            .input-field {
                padding: 10px 12px;
            }

            .submit-btn {
                padding: 10px 14px;
            }
        }
    </style>
</head>

<body>

    <div class="login-card">
        <!-- Left visual panel -->
        <div class="left-panel">
            <img src="/assets/images/logo2.png" alt="Trycam" style="height:72px;display:block" />
            <h2 style="margin:0;font-size:26px;color:#ff6a00;letter-spacing:0.6px;">TRYCAM ADMIN</h2>
            <p style="margin:0;color:#4b4b4b;max-width:300px;text-align:center;line-height:1.4;font-size:14px;">
                Manage centers, products, testimonials, etc. Secure admin area â€” sign in to continue.
            </p>
        </div>

        <!-- Right form panel -->
        <div class="right-panel">
            <div style="display:flex;align-items:center;justify-content:space-between;">
                <h3 style="margin:0;font-size:20px;color:#222;">Sign in to your account</h3>
            </div>

            <!-- Form -->
            <form action="/admin/login" method="POST" style="display:flex;flex-direction:column;gap:12px;"
                id="loginForm">
                <label style="font-size:13px;color:#444;">Email</label>
                <input name="email" type="email" required placeholder="email@example.com" id="email"
                    class="input-field" />

                <div style="display:flex;gap:8px;align-items:center;">
                    <div style="flex:1;">
                        <label style="font-size:13px;color:#444;">Password</label>
                        <input id="password" name="password" type="password" required placeholder="Password"
                            class="input-field" />
                    </div>

                    <button type="button" id="togglePwd" aria-label="Toggle password"
                        style="height:40px;padding:0 12px;border-radius:10px;border:1px solid #eee;background:#fff;cursor:pointer;">
                        <span style="font-size:13px;color:#666;">Show</span>
                    </button>
                </div>

                <!-- <div style="display:flex;justify-content:space-between;align-items:center;font-size:13px;">
                            <label style="display:flex;align-items:center;gap:8px;color:#555;">
                                <input type="checkbox" name="remember" style="width:16px;height:16px;" />
                                <span>Remember me</span>
                            </label>

                            <a href="/admin/forgot"
                                style="color:#ff6a00;text-decoration:none;font-weight:600;">Forgot Password?</a>
                        </div> -->

                <button type="submit" class="submit-btn">
                    Sign in
                </button>
            </form>

            <div style="margin-top:8px;font-size:12px;color:#999;">
                <em>By signing in you agree to the Trycam admin policy.</em>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- script for toggle -->
    <script>
        (function () {
            const btn = document.getElementById('togglePwd');
            const pwd = document.getElementById('password');
            btn && btn.addEventListener('click', function () {
                if (!pwd) return;
                if (pwd.type === 'password') {
                    pwd.type = 'text';
                    btn.innerHTML = '<span style="font-size:13px;color:#666;">Hide</span>';
                } else {
                    pwd.type = 'password';
                    btn.innerHTML = '<span style="font-size:13px;color:#666;">Show</span>';
                }
            });
        })();
    </script>
    <script>
        $(document).ready(function () {
            $("#loginForm").on("submit", function (e) {
                e.preventDefault();
                const email = $("#email").val();
                const password = $("#password").val();

                $.ajax({
                    url: "/admin/login",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ email, password }),
                    success: function (response) {
                        Swal.fire({
                            icon: "success",
                            title: response.message,
                            toast: true,
                            position: "top",
                            showConfirmButton: false,
                            timer: 1500,
                            // timerProgressBar: true,
                        });

                        setTimeout(() => {
                            window.location.href = response.redirect;
                        }, 1100);
                    },
                    error: function (xhr) {
                        const err = JSON.parse(xhr.responseText);
                        Swal.fire({
                            icon: "error",
                            title: err.message,
                            toast: true,
                            position: "top",
                            showConfirmButton: false,
                            timer: 1800,
                            // timerProgressBar: true,
                        });

                    },
                });
            });
        });
    </script>
</body>

</html>