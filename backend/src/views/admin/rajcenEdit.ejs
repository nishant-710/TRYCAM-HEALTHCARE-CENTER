<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <title>Trycam - Admin Panel</title>
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-content {
            flex: 1;
            margin-left: 225px;
            margin-top: 70px;
            padding: 30px;
            transition: margin-left 0.3s ease;
        }

        .form-container {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            max-width: 800px;
            margin: 0 auto;
        }

        .page-title {
            color: #555;
            font-size: 22px;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid #ffe5d6;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #ff6a00;
            box-shadow: 0 0 0 2px rgba(255, 106, 0, 0.1);
            outline: none;
        }

        .btn-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .submit-btn,
        .cancel-btn {
            padding: 12px 25px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .submit-btn {
            background: #ff6a00;
            color: white;
            flex: 1;
        }

        .submit-btn:hover {
            background: #ff8533;
            transform: translateY(-2px);
        }

        .cancel-btn {
            background: #f0f0f0;
            color: #666;
        }

        .cancel-btn:hover {
            background: #e5e5e5;
        }

        .error-message {
            color: #ff4444;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }

        /* Add responsive styles */
        @media (max-width: 992px) {
            .admin-content {
                margin-left: 0;
                margin-top: 60px;
                padding: 20px;
            }

            .edit-container {
                padding: 20px;
            }
        }

        @media (max-width: 768px) {
            .admin-content {
                padding: 15px;
            }

            .edit-container {
                padding: 15px;
            }

            .form-group {
                margin-bottom: 15px;
            }

            .btn-group {
                flex-direction: column;
                gap: 10px;
            }

            .submit-btn,
            .cancel-btn {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .admin-content {
                padding: 10px;
            }

            .edit-container {
                padding: 12px;
                border-radius: 8px;
            }

            .page-title {
                font-size: 18px;
                margin-bottom: 15px;
            }

            .form-control {
                padding: 10px;
                font-size: 14px;
            }

            .form-group label {
                font-size: 14px;
                margin-bottom: 6px;
            }

            .submit-btn,
            .cancel-btn {
                padding: 10px;
                font-size: 13px;
            }
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar') %>
            <%- include('./partials/header') %>

                <main class="admin-content">
                    <div class="form-container">
                        <h1 class="page-title">Edit Center</h1>

                        <form id="centerForm" onsubmit="handleSubmit(event)">
                            <div class="form-group">
                                <label for="name">Center Name</label>
                                <input type="text" id="name" name="name" value="<%=rajcen.name%>" class="form-control"
                                    required minlength="3" maxlength="100">
                                <div class="error-message" id="nameError"></div>
                            </div>

                            <div class="form-group">
                                <label for="address">Address</label>
                                <textarea id="address" name="address" class="form-control" required rows="3"
                                    minlength="10" maxlength="500"><%=rajcen.address%></textarea>
                                <div class="error-message" id="addressError"></div>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" id="email" name="email" value="<%=rajcen.email%>"
                                    class="form-control">
                                <div class="error-message" id="emailError"></div>
                            </div>

                            <div class="form-group">
                                <label for="contact">Contact</label>
                                <input type="text" id="contact" name="contact" value="<%=rajcen.contact%>"
                                    class="form-control" title="Please enter a valid 10-digit contact number">
                                <div class="error-message" id="mobileError"></div>
                            </div>

                            <div class="btn-group">
                                <button type="submit" class="submit-btn">
                                    <i class="fas fa-save"></i> Update Center
                                </button>
                                <button type="button" class="cancel-btn"
                                    onclick="window.location.href='/admin/rajasthan-centers'">
                                    <i class="fas fa-times"></i> Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function handleSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch(`/admin/rajasthan-centers/edit/<%=rajcen._id%>`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) {
                    window.location.href = '/admin/rajasthan-centers';
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: "error",
                    title: error.message,
                    toast: true,
                    position: "top",
                    showConfirmButton: false,
                    timer: 1800,
                    // timerProgressBar: true,
                });
            }
        }

        // Real-time validation
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', function () {
                const errorElement = document.getElementById(`${this.id}Error`);
                if (this.validity.valid) {
                    errorElement.style.display = 'none';
                } else {
                    errorElement.style.display = 'block';
                    errorElement.textContent = this.validationMessage;
                }
            });
        });
    </script>
</body>

</html>