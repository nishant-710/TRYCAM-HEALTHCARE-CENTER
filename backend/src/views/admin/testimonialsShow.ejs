<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="icon" type="image/png" href="/assets/images/logo2.png">
    <title>Trycam - Admin Panel</title>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background: #f5f5f5;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-content {
            flex: 1;
            margin-left: 220px;
            margin-top: 50px;
            transition: margin-left 0.3s ease;
        }

        .testimonials-container {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid #ffe5d6;
        }

        .page-title {
            color: #121212;
            font-size: 25px;
        }

        .add-btn {
            background: #ff6a00;
            color: white;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .add-btn:hover {
            background: #ff8533;
            transform: translateY(-2px);
        }

        .testimonials-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }

        .testimonial-card {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            background: white;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.12);
        }

        .media-container {
            position: relative;
            width: 100%;
            height: 200px;
            background: #f8f8f8;
            cursor: pointer;
        }

        .media-container img,
        .media-container video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .delete-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255, 51, 51, 0.9);
            color: white;
            border: none;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .delete-btn:hover {
            background: #ff3333;
            transform: scale(1.1);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .empty-state i {
            font-size: 40px;
            color: #ddd;
            margin-bottom: 15px;
        }

        .preview-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.85);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .preview-modal.active {
            display: flex;
        }

        .preview-content {
            max-width: 90%;
            max-height: 90vh;
            position: relative;
        }

        .preview-content img,
        .preview-content video {
            max-width: 100%;
            max-height: 90vh;
            border-radius: 8px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
        }

        .close-preview {
            position: absolute;
            top: -40px;
            right: 0;
            color: white;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .close-preview:hover {
            transform: scale(1.1);
        }

        /* Add responsive styles */
        @media (max-width: 992px) {
            .admin-content {
                margin-left: 0;
                margin-top: 60px;
                padding: 20px;
            }

            .testimonials-container {
                padding: 20px;
            }

            .page-header {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .add-btn {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 768px) {
            .admin-content {
                padding: 15px;
            }

            .testimonials-container {
                padding: 15px;
            }

            .testimonials-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
                gap: 15px;
            }

            .media-container {
                height: 180px;
            }
        }

        @media (max-width: 480px) {
            .admin-content {
                padding: 10px;
            }

            .testimonials-container {
                padding: 12px;
                border-radius: 8px;
            }

            .page-title {
                font-size: 20px;
            }

            .testimonials-grid {
                grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
                gap: 10px;
            }

            .media-container {
                height: 160px;
            }

            .delete-btn {
                width: 30px;
                height: 30px;
                font-size: 12px;
            }
        }

        .preview-modal {
            z-index: 9999;
        }

        .preview-content {
            z-index: 10000;
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <%- include('../admin/partials/sidebar') %>
            <%- include('../admin/partials/header') %>

                <main class="admin-content">
                    <div class="testimonials-container">
                        <div class="page-header">
                            <h1 class="page-title">Manage Testimonials</h1>
                            <a href="/admin/testimonials/add" class="add-btn">
                                <i class="fas fa-plus"></i> Add Testimonial
                            </a>
                        </div>

                        <div class="testimonials-grid">
                            <% if (testimonial && testimonial.length> 0) { %>
                                <% testimonial.forEach(function(item) { %>
                                    <div class="testimonial-card">
                                        <div class="media-container"
                                            onclick="openPreview('<%= item.file %>', '<%= item.fileType %>')">
                                            <% if (item.fileType==='video' ) { %>
                                                <video controls>
                                                    <source src="/uploads/<%= item.file %>" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                                <% } else { %>
                                                    <img src="/uploads/<%= item.file %>" alt="Testimonial">
                                                    <% } %>
                                                        <button class="delete-btn"
                                                            onclick="event.stopPropagation(); deleteTestimonial('<%= item._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>

                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-photo-film"></i>
                                                <p>No testimonials found. Add your first testimonial!</p>
                                            </div>
                                            <% } %>
                        </div>
                    </div>
                </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteTestimonial(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This testimonial will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ff6a00',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/testimonials/delete/${id}`, {
                        method: "POST"
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                window.location.href = window.location.href;
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: data.message,
                                    toast: true,
                                    position: "top",
                                    showConfirmButton: false,
                                    timer: 1800,
                                    // timerProgressBar: true,
                                });
                            }
                        });
                }
            });
        }

        // Preview Files

        function openPreview(file, type) {
            const modal = document.getElementById('previewModal');
            const container = document.getElementById('previewContainer');

            if (type === 'video') {
                container.innerHTML = `
                    <video controls autoplay>
                        <source src="/uploads/${file}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                `;
            } else {
                container.innerHTML = `
                    <img src="/uploads/${file}" alt="Testimonial Preview">
                `;
            }

            modal.classList.add('active');
        }

        function closePreview() {
            const modal = document.getElementById('previewModal');
            const container = document.getElementById('previewContainer');
            container.innerHTML = '';
            modal.classList.remove('active');
        }

        // Close preview on escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closePreview();
            }
        });

        // Close preview on clicking outside
        document.getElementById('previewModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closePreview();
            }
        });
    </script>

    <div class="preview-modal" id="previewModal">
        <div class="preview-content">
            <button class="close-preview" onclick="closePreview()">
                <i class="fas fa-times"></i>
            </button>
            <div id="previewContainer"></div>
        </div>
    </div>
</body>

</html>